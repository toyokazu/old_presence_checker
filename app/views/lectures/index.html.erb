<h1>講義一覧</h1>

<table>
  <tr>
    <th>講義概要</th>
    <th colspan="<%=h (controller.admin_user?) ? 3 : 1 %>"></th>
  </tr>
<% @lectures.each do |lecture| %>
  <tr>
    <td><%=h lecture.description %></td>
    <td><%= link_to('出席確認', lecture_presences_path(:lecture_id => lecture.id)) %></td>
    <% if controller.admin_user? %>
    <td><%= link_to '編集', edit_lecture_path(lecture) %></td>
    <td><%= link_to '削除', lecture, :confirm => 'よろしいですか？', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<% if controller.admin_user? %>
<%= link_to '新規作成', new_course_lecture_path(@course_id) %> 
<% end %>
